<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content layout (Home Page) -->
    <LinearLayout
        android:id="@+id/home_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/black"
        tools:context=".HomePageActivity">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:weightSum="10">

            <!-- Hamburger Icon -->
            <ImageView
                android:id="@+id/nav_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/navigation"
                android:contentDescription="Menu Icon"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EasyShop"
                android:textColor="@color/neon_green"
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="8" />

            <!-- Cart Icon -->
            <ImageView
                android:id="@+id/trolley_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/trolley"
                android:contentDescription="Cart Icon"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Search for products"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="text"
            android:layout_margin="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />

        <!-- RecyclerView for Products -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_products"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:clipToPadding="false" />
    </LinearLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:padding="16dp"
        android:gravity="top"
        android:id="@+id/nav_drawer"
        android:layout_gravity="start">

        <!-- Drawer Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EasyShop"
            android:textColor="@color/neon_green"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Drawer Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dashboard"
                android:backgroundTint="@color/neon_green_dark"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard" />

            <Button
                android:id="@+id/btn_inventory"
                android:backgroundTint="@color/neon_green_dark"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inventory" />

            <Button
                android:id="@+id/btn_add_product"
                android:backgroundTint="@color/neon_green_dark"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Product" />

            <Button
                android:id="@+id/btn_sales_histroy"
                android:backgroundTint="@color/neon_green_dark"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sales History" />

            <Button
                android:id="@+id/btn_profile"
                android:backgroundTint="@color/neon_green_dark"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile" />
        </LinearLayout>

        <!-- Sign Out Button -->
        <Button
            android:id="@+id/btn_signout"
            android:backgroundTint="@color/neon_green_dark"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_gravity="bottom" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
